{
  "AppSettings": {
    "InputFolderXML": "C:\\Test\\input",
    "ProcessingFolderXML": "C:\\Test\\processing",
    "OutputFolderPDF": "C:\\Test\\output",
    "ErrorFolderXML": "C:\\Test\\error",
    "PollingInputFolderXML": "0 * * * * ?"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "XMLToPDF"
    }
  },
  "LiteDb": {
    "DatabasePath": "C:\\Test\\XMLtoPDF.db"
  }
}
